@page "/agents/{Id}"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.SignalR.Client
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@using TreeAgent.Web.Features.Agents.Data
@using TreeAgent.Web.Features.Agents.Services
@inject AgentService AgentService
@inject NavigationManager NavigationManager
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>Agent @(Id[..8])</PageTitle>

@if (_agent == null)
{
    <p>Loading...</p>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1>Agent @_agent.Id[..8]</h1>
            <p class="text-muted mb-0">
                Pull Request: <a href="projects/@_agent.PullRequest?.ProjectId">@(_agent.PullRequest?.Title ?? "Unknown")</a>
            </p>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <span class="badge @GetStatusBadgeClass(_agent.Status) fs-6">@_agent.Status</span>
            @if (_agent.Status == AgentStatus.Running)
            {
                <button class="btn btn-warning" @onclick="StopAgent" disabled="@_isLoading">Stop</button>
            }
            else if (_agent.Status == AgentStatus.Stopped || _agent.Status == AgentStatus.Idle || _agent.Status == AgentStatus.Error)
            {
                <button class="btn btn-success" @onclick="StartAgent" disabled="@_isLoading">Start</button>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Messages</span>
                    <div class="d-flex gap-2">
                        <input type="text" class="form-control form-control-sm" style="width: 200px;"
                               placeholder="Filter messages..."
                               @bind="_filterText"
                               @bind:event="oninput" />
                        @if (_agent.Status == AgentStatus.Running)
                        {
                            <span class="badge bg-success">Live</span>
                        }
                    </div>
                </div>
                <div class="card-body message-container" @ref="_messageContainer">
                    @if (_filteredMessages.Count == 0)
                    {
                        <p class="text-muted">No messages yet.</p>
                    }
                    else
                    {
                        @foreach (var message in _filteredMessages)
                        {
                            <div class="message @GetMessageClass(message.Role)">
                                <div class="message-header">
                                    <span class="message-role">@message.Role</span>
                                    <span class="message-time">@message.Timestamp.ToLocalTime().ToString("HH:mm:ss")</span>
                                </div>
                                <div class="message-content">
                                    @if (IsCodeContent(message.Content))
                                    {
                                        <pre><code>@message.Content</code></pre>
                                    }
                                    else
                                    {
                                        <p>@message.Content</p>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
                @if (_agent.Status == AgentStatus.Running)
                {
                    <div class="card-footer">
                        <div class="input-group">
                            <input type="text" class="form-control"
                                   placeholder="Send a message..."
                                   @bind="_newMessage"
                                   @onkeyup="HandleKeyUp" />
                            <button class="btn btn-primary" @onclick="SendMessage" disabled="@(string.IsNullOrWhiteSpace(_newMessage))">
                                Send
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">Agent Info</div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-5">ID</dt>
                        <dd class="col-7"><code>@_agent.Id[..8]</code></dd>
                        <dt class="col-5">Created</dt>
                        <dd class="col-7">@_agent.CreatedAt.ToLocalTime().ToString("g")</dd>
                        <dt class="col-5">Updated</dt>
                        <dd class="col-7">@_agent.UpdatedAt.ToLocalTime().ToString("g")</dd>
                        <dt class="col-5">Messages</dt>
                        <dd class="col-7">@_messages.Count</dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(_agent.SystemPrompt))
            {
                <div class="card">
                    <div class="card-header">System Prompt</div>
                    <div class="card-body">
                        <pre class="mb-0 small">@_agent.SystemPrompt</pre>
                    </div>
                </div>
            }
        </div>
    </div>
}

<style>
    .message-container {
        max-height: 500px;
        overflow-y: auto;
    }

    .message {
        margin-bottom: 1rem;
        padding: 0.75rem;
        border-radius: 0.5rem;
    }

    .message.user {
        background-color: #e3f2fd;
        border-left: 3px solid #2196f3;
    }

    .message.assistant {
        background-color: #f5f5f5;
        border-left: 3px solid #9e9e9e;
    }

    .message.system {
        background-color: #fff3e0;
        border-left: 3px solid #ff9800;
    }

    .message-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .message-role {
        font-weight: bold;
        text-transform: capitalize;
    }

    .message-time {
        color: #6c757d;
    }

    .message-content p {
        margin-bottom: 0;
        white-space: pre-wrap;
    }

    .message-content pre {
        background-color: #263238;
        color: #aed581;
        padding: 0.75rem;
        border-radius: 0.25rem;
        overflow-x: auto;
        margin-bottom: 0;
    }
</style>

@code {
    [Parameter]
    public string Id { get; set; } = "";

    private Agent? _agent;
    private List<Message> _messages = [];
    private HubConnection? _hubConnection;
    private bool _isLoading;
    private string _newMessage = "";
    private string _filterText = "";
    private ElementReference _messageContainer;

    private List<Message> _filteredMessages =>
        string.IsNullOrWhiteSpace(_filterText)
            ? _messages
            : _messages.Where(m => m.Content.Contains(_filterText, StringComparison.OrdinalIgnoreCase)).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        await SetupSignalR();
    }

    private async Task LoadData()
    {
        _agent = await AgentService.GetByIdAsync(Id);
        if (_agent != null)
        {
            _messages = await AgentService.GetMessagesAsync(Id, 500);
        }
    }

    private async Task SetupSignalR()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/hubs/agent"))
            .WithAutomaticReconnect()
            .Build();

        _hubConnection.On<object>("ReceiveMessage", async (messageData) =>
        {
            await LoadData();
            await InvokeAsync(StateHasChanged);
        });

        _hubConnection.On<object>("StatusChanged", async (update) =>
        {
            await LoadData();
            await InvokeAsync(StateHasChanged);
        });

        try
        {
            await _hubConnection.StartAsync();
            await _hubConnection.SendAsync("JoinAgent", Id);
        }
        catch
        {
            // SignalR connection failed - continue without real-time updates
        }
    }

    private async Task StartAgent()
    {
        _isLoading = true;
        await AgentService.StartAsync(Id);
        await LoadData();
        _isLoading = false;
    }

    private async Task StopAgent()
    {
        _isLoading = true;
        await AgentService.StopAsync(Id);
        await LoadData();
        _isLoading = false;
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(_newMessage)) return;

        await AgentService.SendMessageAsync(Id, _newMessage);
        _newMessage = "";
        await LoadData();
    }

    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(_newMessage))
        {
            await SendMessage();
        }
    }

    private string GetStatusBadgeClass(AgentStatus status)
    {
        return status switch
        {
            AgentStatus.Idle => "bg-secondary",
            AgentStatus.Running => "bg-success",
            AgentStatus.Stopped => "bg-dark",
            AgentStatus.Error => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetMessageClass(string role)
    {
        return role.ToLower() switch
        {
            "user" => "user",
            "assistant" => "assistant",
            "system" => "system",
            _ => "assistant"
        };
    }

    private bool IsCodeContent(string content)
    {
        return content.Contains("```") ||
               content.TrimStart().StartsWith("function ") ||
               content.TrimStart().StartsWith("class ") ||
               content.TrimStart().StartsWith("def ") ||
               content.TrimStart().StartsWith("import ") ||
               content.TrimStart().StartsWith("using ");
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection != null)
        {
            await _hubConnection.SendAsync("LeaveAgent", Id);
            await _hubConnection.DisposeAsync();
        }
    }
}
