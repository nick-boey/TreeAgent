@page "/agents"
@using Microsoft.AspNetCore.SignalR.Client
@using TreeAgent.Web.Data.Entities
@using TreeAgent.Web.Services
@inject AgentService AgentService
@inject NavigationManager NavigationManager
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>Agents</PageTitle>

<h1>Agent Dashboard</h1>

@if (_agents == null)
{
    <p>Loading...</p>
}
else if (_agents.Count == 0)
{
    <p class="text-muted">No agents are currently active. Start an agent from a feature to see it here.</p>
}
else
{
    <div class="row">
        @foreach (var agent in _agents)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card @GetStatusBorderClass(agent.Status)">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Agent @agent.Id[..8]</span>
                        <span class="badge @GetStatusBadgeClass(agent.Status)">@agent.Status</span>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0 small">
                            <dt class="col-4">Feature</dt>
                            <dd class="col-8">
                                <a href="projects/@agent.Feature?.ProjectId">@(agent.Feature?.Title ?? "Unknown")</a>
                            </dd>
                            <dt class="col-4">Started</dt>
                            <dd class="col-8">@agent.CreatedAt.ToLocalTime().ToString("g")</dd>
                            <dt class="col-4">Updated</dt>
                            <dd class="col-8">@agent.UpdatedAt.ToLocalTime().ToString("g")</dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex gap-2">
                            <a href="agents/@agent.Id" class="btn btn-sm btn-primary">View Messages</a>
                            @if (agent.Status == AgentStatus.Running)
                            {
                                <button class="btn btn-sm btn-warning" @onclick="() => StopAgent(agent.Id)" disabled="@_isLoading">
                                    Stop
                                </button>
                            }
                            else if (agent.Status == AgentStatus.Stopped || agent.Status == AgentStatus.Error)
                            {
                                <button class="btn btn-sm btn-success" @onclick="() => StartAgent(agent.Id)" disabled="@_isLoading">
                                    Restart
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Agent>? _agents;
    private HubConnection? _hubConnection;
    private bool _isLoading;

    protected override async Task OnInitializedAsync()
    {
        await LoadAgents();
        await SetupSignalR();
    }

    private async Task LoadAgents()
    {
        _agents = await AgentService.GetAllActiveAsync();
        // Load related data
        foreach (var agent in _agents)
        {
            var fullAgent = await AgentService.GetByIdAsync(agent.Id);
            if (fullAgent != null)
            {
                agent.Feature = fullAgent.Feature;
            }
        }
    }

    private async Task SetupSignalR()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/hubs/agent"))
            .WithAutomaticReconnect()
            .Build();

        _hubConnection.On<object>("StatusChanged", async (update) =>
        {
            await LoadAgents();
            await InvokeAsync(StateHasChanged);
        });

        try
        {
            await _hubConnection.StartAsync();
            await _hubConnection.SendAsync("JoinAllAgents");
        }
        catch
        {
            // SignalR connection failed - continue without real-time updates
        }
    }

    private async Task StartAgent(string agentId)
    {
        _isLoading = true;
        await AgentService.StartAsync(agentId);
        await LoadAgents();
        _isLoading = false;
    }

    private async Task StopAgent(string agentId)
    {
        _isLoading = true;
        await AgentService.StopAsync(agentId);
        await LoadAgents();
        _isLoading = false;
    }

    private string GetStatusBadgeClass(AgentStatus status)
    {
        return status switch
        {
            AgentStatus.Idle => "bg-secondary",
            AgentStatus.Running => "bg-success",
            AgentStatus.Stopped => "bg-dark",
            AgentStatus.Error => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetStatusBorderClass(AgentStatus status)
    {
        return status switch
        {
            AgentStatus.Running => "border-success",
            AgentStatus.Error => "border-danger",
            _ => ""
        };
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection != null)
        {
            await _hubConnection.SendAsync("LeaveAllAgents");
            await _hubConnection.DisposeAsync();
        }
    }
}
