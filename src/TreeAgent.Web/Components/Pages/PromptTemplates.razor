@page "/prompts"
@using TreeAgent.Web.Features.PullRequests.Data.Entities
@using SystemPromptService = TreeAgent.Web.Features.Agents.SystemPromptService
@inject SystemPromptService PromptService
@rendermode InteractiveServer

<PageTitle>Prompt Templates</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Prompt Templates</h1>
    <button class="btn btn-primary" @onclick="ShowCreateModal">New Template</button>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">Available Template Variables</div>
            <div class="card-body">
                <div class="row">
                    @foreach (var variable in SystemPromptService.GetAvailableVariables())
                    {
                        <div class="col-md-4 mb-2">
                            <code>@variable.Variable</code>
                            <small class="text-muted d-block">@variable.Description</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (_templates == null)
{
    <p>Loading...</p>
}
else if (_templates.Count == 0)
{
    <p class="text-muted">No prompt templates yet. Create one to get started.</p>
}
else
{
    <div class="row">
        @foreach (var template in _templates)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>@template.Name</span>
                        @if (template.IsGlobal)
                        {
                            <span class="badge bg-info">Global</span>
                        }
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(template.Description))
                        {
                            <p class="text-muted small">@template.Description</p>
                        }
                        <pre class="small mb-0" style="max-height: 150px; overflow: auto;">@template.Content</pre>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(template)">Edit</button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTemplate(template.Id)">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (_showModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(_editingTemplate == null ? "New Template" : "Edit Template")</h5>
                    <button type="button" class="btn-close" @onclick="HideModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" @bind="_model.Name" />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" class="form-control" id="description" @bind="_model.Description" />
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Content</label>
                        <textarea class="form-control font-monospace" id="content" rows="10" @bind="_model.Content"></textarea>
                        <div class="form-text">Use template variables like {{FEATURE_TITLE}} to inject context.</div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="isGlobal" @bind="_model.IsGlobal" />
                        <label class="form-check-label" for="isGlobal">
                            Global template (available to all projects)
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveTemplate" disabled="@string.IsNullOrWhiteSpace(_model.Name)">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<SystemPromptTemplate>? _templates;
    private bool _showModal;
    private SystemPromptTemplate? _editingTemplate;
    private TemplateModel _model = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadTemplates();
    }

    private async Task LoadTemplates()
    {
        _templates = await PromptService.GetGlobalTemplatesAsync();
    }

    private void ShowCreateModal()
    {
        _editingTemplate = null;
        _model = new TemplateModel();
        _showModal = true;
    }

    private void ShowEditModal(SystemPromptTemplate template)
    {
        _editingTemplate = template;
        _model = new TemplateModel
        {
            Name = template.Name,
            Description = template.Description,
            Content = template.Content,
            IsGlobal = template.IsGlobal
        };
        _showModal = true;
    }

    private void HideModal()
    {
        _showModal = false;
        _editingTemplate = null;
        _model = new TemplateModel();
    }

    private async Task SaveTemplate()
    {
        if (string.IsNullOrWhiteSpace(_model.Name) || string.IsNullOrWhiteSpace(_model.Content))
            return;

        if (_editingTemplate == null)
        {
            await PromptService.CreateAsync(
                _model.Name,
                _model.Content,
                _model.Description,
                null,
                _model.IsGlobal);
        }
        else
        {
            await PromptService.UpdateAsync(
                _editingTemplate.Id,
                _model.Name,
                _model.Content,
                _model.Description,
                _model.IsGlobal);
        }

        HideModal();
        await LoadTemplates();
    }

    private async Task DeleteTemplate(string id)
    {
        await PromptService.DeleteAsync(id);
        await LoadTemplates();
    }

    private class TemplateModel
    {
        public string Name { get; set; } = "";
        public string? Description { get; set; }
        public string Content { get; set; } = "";
        public bool IsGlobal { get; set; } = true;
    }
}
