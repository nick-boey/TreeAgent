@using Homespun.Features.Beads.Data
@inject IAgentWorkflowService AgentWorkflowService
@inject ProjectService ProjectService
@inject PullRequestDataService PullRequestDataService
@inject IBeadsService BeadsService

<div class="agent-management-panel">
    @if (RunningServers.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon">ðŸ¤–</div>
            <h5>No Running Agents</h5>
            <p class="text-muted">Start an agent from a project, issue, or pull request to see it here.</p>
        </div>
    }
    else
    {
        @foreach (var group in _groupedServers)
        {
            <div class="project-group mb-4">
                <div class="project-header">
                    <h5>@group.ProjectName</h5>
                    <span class="badge bg-secondary">@group.Servers.Count agent@(group.Servers.Count != 1 ? "s" : "")</span>
                </div>
                
                <div class="agents-list">
                    @foreach (var serverInfo in group.Servers)
                    {
                        var entityInfo = _entityInfoCache.GetValueOrDefault(serverInfo.EntityId);
                        var uptime = DateTime.UtcNow - serverInfo.StartedAt;
                        
                        <div class="agent-card">
                            <div class="agent-card-header">
                                <div class="agent-title">
                                    @if (entityInfo != null)
                                    {
                                        <span class="entity-type-badge @GetEntityTypeBadgeClass(entityInfo.EntityType)">
                                            @entityInfo.EntityType
                                        </span>
                                        <span class="entity-title">@entityInfo.Title</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@serverInfo.EntityId</span>
                                    }
                                </div>
                                <span class="status-indicator running" title="Running"></span>
                            </div>
                            
                            <div class="agent-card-body">
                                <div class="agent-details">
                                    @if (entityInfo?.BranchName != null)
                                    {
                                        <div class="detail-row">
                                            <span class="detail-label">Branch:</span>
                                            <code class="detail-value">@entityInfo.BranchName</code>
                                        </div>
                                    }
                                    
                                    <div class="detail-row">
                                        <span class="detail-label">Server:</span>
                                        <code class="detail-value">@serverInfo.BaseUrl</code>
                                    </div>
                                    
                                    @if (serverInfo.ActiveSessionId != null)
                                    {
                                        <div class="detail-row">
                                            <span class="detail-label">Session:</span>
                                            <code class="detail-value">@serverInfo.ActiveSessionId[..8]...</code>
                                        </div>
                                    }
                                    
                                    <div class="detail-row">
                                        <span class="detail-label">Uptime:</span>
                                        <span class="detail-value">@FormatUptime(uptime)</span>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <span class="detail-label">Sessions:</span>
                                        <span class="detail-value">@serverInfo.Sessions.Count</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="agent-card-footer">
                                @if (serverInfo.WebViewUrl != null)
                                {
                                    <a href="@serverInfo.WebViewUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        Open Web View
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        Initializing...
                                    </button>
                                }
                                
                                <button class="btn btn-sm btn-outline-danger" 
                                        @onclick="() => StopAgent(serverInfo.EntityId)"
                                        disabled="@(_stoppingAgents.Contains(serverInfo.EntityId))">
                                    @if (_stoppingAgents.Contains(serverInfo.EntityId))
                                    {
                                        <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                    }
                                    Stop Agent
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    
    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger">@_errorMessage</div>
    }
</div>

