@using Fleece.Core.Models
@using Homespun.Features.ClaudeCode.Data
@using Homespun.Features.ClaudeCode.Services
@using Homespun.Features.Fleece.Services
@using Homespun.Features.Projects
@using Homespun.Features.PullRequests.Data

@inject IClaudeSessionStore SessionStore
@inject ProjectService ProjectService
@inject PullRequestDataService PullRequestDataService
@inject IFleeceService FleeceService

<div class="agent-management-panel">
    @if (_sessions.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon">ðŸ¤–</div>
            <h5>No Active Sessions</h5>
            <p class="text-text-muted">Start a Claude Code session from an issue or pull request to see it here.</p>
        </div>
    }
    else
    {
        @foreach (var group in _groupedSessions)
        {
            <div class="project-group mb-4">
                <div class="project-header">
                    <h5>@group.ProjectName</h5>
                    <span class="badge bg-secondary">@group.Sessions.Count session@(group.Sessions.Count != 1 ? "s" : "")</span>
                </div>

                <div class="sessions-list">
                    @foreach (var session in group.Sessions)
                    {
                        var entityInfo = _entityInfoCache.GetValueOrDefault(session.EntityId);
                        var uptime = DateTime.UtcNow - session.CreatedAt;

                        <div class="session-card">
                            <div class="session-card-header">
                                <div class="session-title">
                                    @if (entityInfo != null)
                                    {
                                        <span class="entity-type-badge @GetEntityTypeBadgeClass(entityInfo.EntityType)">
                                            @entityInfo.EntityType
                                        </span>
                                        <span class="entity-title">@entityInfo.Title</span>
                                    }
                                    else
                                    {
                                        <span class="text-text-muted">@session.EntityId</span>
                                    }
                                </div>
                                <span class="status-indicator @GetStatusIndicatorClass(session.Status)" title="@session.Status"></span>
                            </div>

                            <div class="session-card-body">
                                <div class="session-details">
                                    <div class="detail-row">
                                        <span class="detail-label">Mode:</span>
                                        <span class="badge @(session.Mode == SessionMode.Plan ? "bg-status-info" : "bg-status-success")">
                                            @session.Mode
                                        </span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Model:</span>
                                        <code class="detail-value">@GetModelDisplayName(session.Model)</code>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Status:</span>
                                        <span class="detail-value">@session.Status.ToDisplayLabel()</span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Uptime:</span>
                                        <span class="detail-value">@FormatUptime(uptime)</span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Messages:</span>
                                        <span class="detail-value">@session.Messages.Count</span>
                                    </div>
                                </div>
                            </div>

                            <div class="session-card-footer">
                                <a href="/session/@session.Id" class="btn btn-sm btn-outline-primary">
                                    Open Chat
                                </a>

                                <button class="btn btn-sm btn-outline-danger"
                                        @onclick="() => StopSession(session.Id)"
                                        disabled="@(_stoppingSessions.Contains(session.Id))">
                                    @if (_stoppingSessions.Contains(session.Id))
                                    {
                                        <span class="spinner-border spinner-border-sm mr-1" role="status"></span>
                                    }
                                    Stop Session
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger">@_errorMessage</div>
    }
</div>

