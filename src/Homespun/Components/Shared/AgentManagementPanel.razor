@code {
    [Parameter] public List<RunningServerInfo> RunningServers { get; set; } = new();
    [Parameter] public EventCallback OnAgentStopped { get; set; }
    [Parameter] public EventCallback OnRefreshRequested { get; set; }
    
    private List<ProjectGroupInfo> _groupedServers = new();
    private Dictionary<string, EntityInfo> _entityInfoCache = new();
    private HashSet<string> _stoppingAgents = new();
    private string? _errorMessage;
    
    protected override async Task OnParametersSetAsync()
    {
        await LoadEntityInformation();
        GroupServersByProject();
    }
    
    private async Task LoadEntityInformation()
    {
        _entityInfoCache.Clear();
        var projects = await ProjectService.GetAllAsync();
        
        foreach (var serverInfo in RunningServers)
        {
            try
            {
                // Try to identify the entity type and load its information
                // First, try as a PR
                var pr = await PullRequestDataService.GetByIdAsync(serverInfo.EntityId);
                if (pr != null)
                {
                    _entityInfoCache[serverInfo.EntityId] = new EntityInfo
                    {
                        EntityType = "PR",
                        Title = pr.Title,
                        BranchName = pr.BranchName,
                        ProjectId = pr.ProjectId,
                        ProjectName = projects.FirstOrDefault(p => p.Id == pr.ProjectId)?.Name ?? "Unknown Project"
                    };
                    continue;
                }
                
                // Try as a beads issue - check all projects
                foreach (var project in projects)
                {
                    try
                    {
                        var issue = await BeadsService.GetIssueAsync(project.LocalPath, serverInfo.EntityId);
                        if (issue != null)
                        {
                            // Try to get branch name from metadata or labels
                            var branchInfo = BeadsBranchLabel.Parse(issue.Labels);
                            string? branchName = null;
                            if (branchInfo != null)
                            {
                                branchName = $"{branchInfo.Value.Group}/{issue.Type.ToString().ToLowerInvariant()}/{branchInfo.Value.BranchId}+{issue.Id}";
                            }
                            
                            _entityInfoCache[serverInfo.EntityId] = new EntityInfo
                            {
                                EntityType = "Issue",
                                Title = issue.Title,
                                BranchName = branchName,
                                ProjectId = project.Id,
                                ProjectName = project.Name
                            };
                            break;
                        }
                    }
                    catch { }
                }
                
                // If not found, use entity ID as fallback
                if (!_entityInfoCache.ContainsKey(serverInfo.EntityId))
                {
                    // Try to infer project from worktree path
                    var project = projects.FirstOrDefault(p => serverInfo.WorktreePath.Contains(p.Name));
                    _entityInfoCache[serverInfo.EntityId] = new EntityInfo
                    {
                        EntityType = "Unknown",
                        Title = serverInfo.EntityId,
                        BranchName = null,
                        ProjectId = project?.Id ?? "unknown",
                        ProjectName = project?.Name ?? "Unknown Project"
                    };
                }
            }
            catch (Exception ex)
            {
                // Fallback for any errors
                _entityInfoCache[serverInfo.EntityId] = new EntityInfo
                {
                    EntityType = "Unknown",
                    Title = serverInfo.EntityId,
                    BranchName = null,
                    ProjectId = "unknown",
                    ProjectName = "Unknown Project"
                };
            }
        }
    }
    
    private void GroupServersByProject()
    {
        _groupedServers = RunningServers
            .Select(server => new
            {
                Server = server,
                EntityInfo = _entityInfoCache.GetValueOrDefault(server.EntityId)
            })
            .GroupBy(x => x.EntityInfo?.ProjectName ?? "Unknown Project")
            .Select(group => new ProjectGroupInfo
            {
                ProjectName = group.Key,
                Servers = group.Select(x => x.Server).OrderBy(s => _entityInfoCache.GetValueOrDefault(s.EntityId)?.Title ?? s.EntityId).ToList()
            })
            .OrderBy(g => g.ProjectName)
            .ToList();
    }
    
    private async Task StopAgent(string entityId)
    {
        _stoppingAgents.Add(entityId);
        _errorMessage = null;
        
        try
        {
            await AgentWorkflowService.StopAgentAsync(entityId);
            await OnAgentStopped.InvokeAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to stop agent: {ex.Message}";
        }
        finally
        {
            _stoppingAgents.Remove(entityId);
        }
    }
    
    private string FormatUptime(TimeSpan uptime)
    {
        if (uptime.TotalHours >= 1)
            return $"{(int)uptime.TotalHours}h {uptime.Minutes}m";
        if (uptime.TotalMinutes >= 1)
            return $"{(int)uptime.TotalMinutes}m {uptime.Seconds}s";
        return $"{uptime.Seconds}s";
    }
    
    private string GetEntityTypeBadgeClass(string entityType) => entityType.ToLowerInvariant() switch
    {
        "pr" => "pr",
        "issue" => "issue",
        "change" => "change",
        _ => "pr"
    };
    
    private class ProjectGroupInfo
    {
        public required string ProjectName { get; set; }
        public required List<RunningServerInfo> Servers { get; set; }
    }
    
    private class EntityInfo
    {
        public required string EntityType { get; set; }
        public required string Title { get; set; }
        public string? BranchName { get; set; }
        public required string ProjectId { get; set; }
        public required string ProjectName { get; set; }
    }
}
