@code {
    [Parameter] public EventCallback OnSessionStopped { get; set; }

    private List<ClaudeSession> _sessions = [];
    private List<ProjectGroupInfo> _groupedSessions = [];
    private Dictionary<string, EntityInfo> _entityInfoCache = new();
    private HashSet<string> _stoppingSessions = new();
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await RefreshSessions();
    }

    protected override async Task OnParametersSetAsync()
    {
        await RefreshSessions();
    }

    private async Task RefreshSessions()
    {
        _sessions = SessionStore.GetAll().ToList();
        await LoadEntityInformation();
        GroupSessionsByProject();
    }

    private async Task LoadEntityInformation()
    {
        _entityInfoCache.Clear();
        var projects = await ProjectService.GetAllAsync();

        foreach (var session in _sessions)
        {
            try
            {
                // Try to identify the entity type and load its information
                // First, try as a PR
                var pr = await PullRequestDataService.GetByIdAsync(session.EntityId);
                if (pr != null)
                {
                    _entityInfoCache[session.EntityId] = new EntityInfo
                    {
                        EntityType = "PR",
                        Title = pr.Title,
                        BranchName = pr.BranchName,
                        ProjectId = pr.ProjectId,
                        ProjectName = projects.FirstOrDefault(p => p.Id == pr.ProjectId)?.Name ?? "Unknown Project"
                    };
                    continue;
                }

                // Try as a Fleece issue - check the project this session belongs to
                var project = projects.FirstOrDefault(p => p.Id == session.ProjectId);
                if (project != null)
                {
                    try
                    {
                        var issue = await FleeceService.GetIssueAsync(project.LocalPath, session.EntityId);
                        if (issue != null)
                        {
                            // Build branch name from issue properties
                            string? branchName = null;
                            if (!string.IsNullOrEmpty(issue.Group))
                            {
                                var branchId = issue.Title.ToLowerInvariant()
                                    .Replace(" ", "-")
                                    .Replace("_", "-");
                                branchId = System.Text.RegularExpressions.Regex.Replace(branchId, "[^a-z0-9-]", "");
                                branchId = System.Text.RegularExpressions.Regex.Replace(branchId, "-+", "-").Trim('-');
                                branchName = $"{issue.Group}/{issue.Type.ToString().ToLowerInvariant()}/{branchId}+{issue.Id}";
                            }

                            _entityInfoCache[session.EntityId] = new EntityInfo
                            {
                                EntityType = "Issue",
                                Title = issue.Title,
                                BranchName = branchName,
                                ProjectId = project.Id,
                                ProjectName = project.Name
                            };
                            continue;
                        }
                    }
                    catch { }
                }

                // Fallback
                _entityInfoCache[session.EntityId] = new EntityInfo
                {
                    EntityType = "Unknown",
                    Title = session.EntityId,
                    BranchName = null,
                    ProjectId = session.ProjectId,
                    ProjectName = projects.FirstOrDefault(p => p.Id == session.ProjectId)?.Name ?? "Unknown Project"
                };
            }
            catch
            {
                _entityInfoCache[session.EntityId] = new EntityInfo
                {
                    EntityType = "Unknown",
                    Title = session.EntityId,
                    BranchName = null,
                    ProjectId = session.ProjectId,
                    ProjectName = "Unknown Project"
                };
            }
        }
    }

    private void GroupSessionsByProject()
    {
        _groupedSessions = _sessions
            .Select(session => new
            {
                Session = session,
                EntityInfo = _entityInfoCache.GetValueOrDefault(session.EntityId)
            })
            .GroupBy(x => x.EntityInfo?.ProjectName ?? "Unknown Project")
            .Select(group => new ProjectGroupInfo
            {
                ProjectName = group.Key,
                Sessions = group.Select(x => x.Session)
                    .OrderBy(s => _entityInfoCache.GetValueOrDefault(s.EntityId)?.Title ?? s.EntityId)
                    .ToList()
            })
            .OrderBy(g => g.ProjectName)
            .ToList();
    }

    private async Task StopSession(string sessionId)
    {
        _stoppingSessions.Add(sessionId);
        _errorMessage = null;

        try
        {
            // TODO: Integrate with ClaudeSessionService to properly stop the session
            SessionStore.Remove(sessionId);
            await RefreshSessions();
            await OnSessionStopped.InvokeAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to stop session: {ex.Message}";
        }
        finally
        {
            _stoppingSessions.Remove(sessionId);
        }
    }

    private static string FormatUptime(TimeSpan uptime)
    {
        if (uptime.TotalHours >= 1)
            return $"{(int)uptime.TotalHours}h {uptime.Minutes}m";
        if (uptime.TotalMinutes >= 1)
            return $"{(int)uptime.TotalMinutes}m {uptime.Seconds}s";
        return $"{uptime.Seconds}s";
    }

    private static string GetEntityTypeBadgeClass(string entityType) => entityType.ToLowerInvariant() switch
    {
        "pr" => "pr",
        "issue" => "issue",
        _ => "pr"
    };

    private static string GetStatusIndicatorClass(ClaudeSessionStatus status) => status.ToIndicatorClass();

    private static string GetModelDisplayName(string model)
    {
        // Extract the model name from full ID like "anthropic/claude-sonnet-4-20250514"
        var parts = model.Split('/');
        return parts.Length > 1 ? parts[1] : model;
    }

    private class ProjectGroupInfo
    {
        public required string ProjectName { get; set; }
        public required List<ClaudeSession> Sessions { get; set; }
    }

    private class EntityInfo
    {
        public required string EntityType { get; set; }
        public required string Title { get; set; }
        public string? BranchName { get; set; }
        public required string ProjectId { get; set; }
        public required string ProjectName { get; set; }
    }
}
