@page "/projects/{ProjectId}/issues/create"
@using Homespun.Features.Beads
@using Homespun.Features.Beads.Data
@using Homespun.Features.Beads.Services
@using Homespun.Features.Projects
@using Homespun.Features.PullRequests.Data.Entities
@inject ProjectService ProjectService
@inject IBeadsService BeadsService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>New Issue</PageTitle>

<h1>New Issue</h1>

@if (_project == null)
{
    <p>Loading...</p>
}
else
{
    <p class="text-muted">Creating new beads issue for @_project.Name</p>

    <div class="row">
        <div class="col-md-8">
            <EditForm Model="_model" OnValidSubmit="HandleSubmit" FormName="CreateBeadsIssue">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <div class="alert alert-danger">@_errorMessage</div>
                }

                <div class="mb-3">
                    <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                    <input type="text" id="title" class="form-control" @bind="_model.Title" @bind:event="oninput" 
                           @onchange="OnTitleChanged" placeholder="Implement feature X" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="group" class="form-label">Group <span class="text-danger">*</span></label>
                        <input type="text" id="group" class="form-control" list="groupList" 
                               @bind="_model.Group" @bind:event="oninput" placeholder="frontend, core, api, etc." />
                        <datalist id="groupList">
                            @foreach (var group in _existingGroups)
                            {
                                <option value="@group" />
                            }
                        </datalist>
                        <div class="form-text">Logical grouping for branch naming (e.g., core, frontend, api)</div>
                        @if (!string.IsNullOrWhiteSpace(_model.Group) && !BeadsBranchLabel.IsValidGroup(_model.Group.Trim().ToLowerInvariant()))
                        {
                            <div class="text-danger small">Group must be lowercase alphanumeric with hyphens (e.g., "frontend", "my-group")</div>
                        }
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="type" class="form-label">Type <span class="text-danger">*</span></label>
                        <InputSelect id="type" class="form-select" @bind-Value="_model.Type">
                            @foreach (var type in Enum.GetValues<BeadsIssueType>())
                            {
                                <option value="@type">@type.ToString().ToLowerInvariant()</option>
                            }
                        </InputSelect>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="branchId" class="form-label">Branch ID <span class="text-danger">*</span></label>
                    <input type="text" id="branchId" class="form-control font-monospace" 
                           @bind="_model.BranchId" @bind:event="oninput" @onfocus="OnBranchIdFocus" placeholder="update-page" />
                    <div class="form-text">Short identifier for the branch (lowercase, hyphens allowed)</div>
                    @if (!string.IsNullOrWhiteSpace(_model.BranchId) && !BeadsBranchLabel.IsValidBranchId(_model.BranchId.Trim().ToLowerInvariant()))
                    {
                        <div class="text-danger small">Branch ID must be lowercase alphanumeric with hyphens (e.g., "update-page", "fix-login")</div>
                    }
                </div>

                <div class="mb-3 p-3 bg-light rounded">
                    <label class="form-label fw-bold">Branch Name Preview</label>
                    <div class="font-monospace fs-6 @(IsPreviewValid() ? "" : "text-muted")">
                        @GetBranchNamePreview()
                    </div>
                    <div class="form-text mt-2">
                        <span class="font-monospace small">@GetHomespunLabelPreview()</span>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <InputTextArea id="description" class="form-control" rows="6" @bind-Value="_model.Description" 
                        placeholder="Detailed description and implementation instructions for the AI agent..." />
                    <div class="form-text">Include implementation details, acceptance criteria, and any specific instructions.</div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="priority" class="form-label">Priority</label>
                        <InputSelect id="priority" class="form-select" @bind-Value="_model.Priority">
                            <option value="">Not set</option>
                            <option value="0">P0 - Critical</option>
                            <option value="1">P1 - High</option>
                            <option value="2">P2 - Medium</option>
                            <option value="3">P3 - Low</option>
                            <option value="4">P4 - Backlog</option>
                        </InputSelect>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="parentId" class="form-label">Parent Issue (for subtasks)</label>
                        <InputText id="parentId" class="form-control" @bind-Value="_model.ParentId" placeholder="bd-XXXX" />
                        <div class="form-text">Optional: Parent issue ID for hierarchical organization</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="labels" class="form-label">Additional Labels</label>
                    <InputText id="labels" class="form-control" @bind-Value="_model.Labels" placeholder="label1, label2" />
                    <div class="form-text">Comma-separated list of additional labels (the hsp: label is added automatically)</div>
                </div>

                <div class="mb-3">
                    <label for="blockedBy" class="form-label">Blocked By</label>
                    <InputText id="blockedBy" class="form-control" @bind-Value="_model.BlockedBy" placeholder="bd-XXXX, bd-YYYY" />
                    <div class="form-text">Comma-separated list of issue IDs that block this issue</div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@(_isSubmitting || !IsFormValid())">
                        @if (_isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Create Issue
                    </button>
                    <a href="projects/@ProjectId" class="btn btn-secondary">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter]
    public string ProjectId { get; set; } = "";

    private Project? _project;
    private BeadsIssueModel _model = new();
    private bool _isSubmitting;
    private string? _errorMessage;
    private List<string> _existingGroups = [];
    private bool _branchIdManuallyEdited;

    protected override async Task OnInitializedAsync()
    {
        _project = await ProjectService.GetByIdAsync(ProjectId);
        
        if (_project != null)
        {
            // Load existing groups from project issues
            _existingGroups = await BeadsService.GetUniqueGroupsAsync(_project.LocalPath);
        }
    }

    private void OnTitleChanged(ChangeEventArgs e)
    {
        // Auto-populate branch ID from title if not manually edited
        if (!_branchIdManuallyEdited && !string.IsNullOrWhiteSpace(_model.Title))
        {
            _model.BranchId = BeadsBranchHelper.SanitizeForBranch(_model.Title);
        }
    }

    private void OnBranchIdFocus()
    {
        // Once user focuses the branch ID field, stop auto-populating
        _branchIdManuallyEdited = true;
    }

    private bool IsPreviewValid()
    {
        return !string.IsNullOrWhiteSpace(_model.Group) 
            && !string.IsNullOrWhiteSpace(_model.BranchId)
            && BeadsBranchLabel.IsValidGroup(_model.Group.Trim().ToLowerInvariant())
            && BeadsBranchLabel.IsValidBranchId(_model.BranchId.Trim().ToLowerInvariant());
    }

    private bool IsFormValid()
    {
        return !string.IsNullOrWhiteSpace(_model.Title)
            && !string.IsNullOrWhiteSpace(_model.Group)
            && !string.IsNullOrWhiteSpace(_model.BranchId)
            && BeadsBranchLabel.IsValidGroup(_model.Group.Trim().ToLowerInvariant())
            && BeadsBranchLabel.IsValidBranchId(_model.BranchId.Trim().ToLowerInvariant());
    }

    private string GetBranchNamePreview()
    {
        var group = _model.Group?.Trim().ToLowerInvariant();
        var type = _model.Type.ToString().ToLowerInvariant();
        var branchId = _model.BranchId?.Trim().ToLowerInvariant();
        
        if (string.IsNullOrWhiteSpace(group)) group = "<group>";
        if (string.IsNullOrWhiteSpace(branchId)) branchId = "<branch-id>";
        
        return $"{group}/{type}/{branchId}+bd-XXXX";
    }

    private string GetHomespunLabelPreview()
    {
        var group = _model.Group?.Trim().ToLowerInvariant();
        var branchId = _model.BranchId?.Trim().ToLowerInvariant();
        
        if (string.IsNullOrWhiteSpace(group)) group = "<group>";
        if (string.IsNullOrWhiteSpace(branchId)) branchId = "<branch-id>";
        
        return $"Label: hsp:{group}/-/{branchId}";
    }

    private async Task HandleSubmit()
    {
        if (_project == null) return;
        
        _isSubmitting = true;
        _errorMessage = null;

        try
        {
            // Validate required fields
            if (string.IsNullOrWhiteSpace(_model.Title))
            {
                _errorMessage = "Title is required.";
                return;
            }

            var group = _model.Group?.Trim().ToLowerInvariant() ?? "";
            var branchId = _model.BranchId?.Trim().ToLowerInvariant() ?? "";

            if (!BeadsBranchLabel.IsValidGroup(group))
            {
                _errorMessage = "Group must be lowercase alphanumeric with hyphens.";
                return;
            }

            if (!BeadsBranchLabel.IsValidBranchId(branchId))
            {
                _errorMessage = "Branch ID must be lowercase alphanumeric with hyphens.";
                return;
            }

            // Create the hsp: label
            var hspLabel = BeadsBranchLabel.Create(group, branchId);

            // Parse additional labels and add the hsp: label
            var labels = new List<string> { hspLabel };
            if (!string.IsNullOrWhiteSpace(_model.Labels))
            {
                labels.AddRange(_model.Labels.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries));
            }
            
            var blockedBy = string.IsNullOrWhiteSpace(_model.BlockedBy)
                ? null
                : _model.BlockedBy.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).ToList();

            var options = new BeadsCreateOptions
            {
                Title = _model.Title.Trim(),
                Description = string.IsNullOrWhiteSpace(_model.Description) ? null : _model.Description.Trim(),
                Type = _model.Type,
                Priority = _model.Priority,
                Labels = labels,
                ParentId = string.IsNullOrWhiteSpace(_model.ParentId) ? null : _model.ParentId.Trim(),
                BlockedBy = blockedBy
            };

            var issue = await BeadsService.CreateIssueAsync(_project.LocalPath, options);

            // Sync to ensure the issue is persisted
            await BeadsService.SyncAsync(_project.LocalPath);

            NavigationManager.NavigateTo($"projects/{ProjectId}");
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to create issue: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private class BeadsIssueModel
    {
        public string Title { get; set; } = "";
        public string Group { get; set; } = "";
        public string BranchId { get; set; } = "";
        public BeadsIssueType Type { get; set; } = BeadsIssueType.Feature;
        public string? Description { get; set; }
        public int? Priority { get; set; }
        public string? ParentId { get; set; }
        public string? Labels { get; set; }
        public string? BlockedBy { get; set; }
    }
}
