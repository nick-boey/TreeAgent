@page "/projects/{ProjectId}/pull-requests/create"
@using Homespun.Features.Projects
@using Homespun.Features.PullRequests.Data
@using Homespun.Features.PullRequests.Data.Entities
@inject ProjectService ProjectService
@inject PullRequestDataService PullRequestDataService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>New Pull Request</PageTitle>

<h1>New Pull Request</h1>

@if (_project == null)
{
    <p>Loading...</p>
}
else
{
    <p class="text-muted">Creating pull request for @_project.Name</p>

    <div class="row">
        <div class="col-md-8">
            <EditForm Model="_model" OnValidSubmit="HandleSubmit" FormName="CreatePullRequest">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <InputText id="title" class="form-control" @bind-Value="_model.Title" />
                    <ValidationMessage For="() => _model.Title" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <InputTextArea id="description" class="form-control" rows="3" @bind-Value="_model.Description" />
                </div>

                <div class="mb-3">
                    <label for="branchName" class="form-label">Branch Name</label>
                    <InputText id="branchName" class="form-control" @bind-Value="_model.BranchName" placeholder="feature/my-feature" />
                    <div class="form-text">Optional. Required for development and PR creation.</div>
                </div>

                <div class="mb-3">
                    <label for="parentId" class="form-label">Parent Pull Request</label>
                    <InputSelect id="parentId" class="form-select" @bind-Value="_model.ParentId">
                        <option value="">None (root)</option>
                        @foreach (var pr in _allPullRequests)
                        {
                            <option value="@pr.Id">@pr.Title</option>
                        }
                    </InputSelect>
                    <div class="form-text">Optional. Select a parent to nest this pull request.</div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@_isSubmitting">
                        @if (_isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Create Pull Request
                    </button>
                    <a href="projects/@ProjectId" class="btn btn-secondary">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter]
    public string ProjectId { get; set; } = "";

    private Project? _project;
    private List<PullRequest> _allPullRequests = [];
    private PullRequestModel _model = new();
    private bool _isSubmitting;

    protected override async Task OnInitializedAsync()
    {
        _project = await ProjectService.GetByIdAsync(ProjectId);
        if (_project != null)
        {
            _allPullRequests = await PullRequestDataService.GetByProjectIdAsync(ProjectId);
        }
    }

    private async Task HandleSubmit()
    {
        _isSubmitting = true;
        try
        {
            await PullRequestDataService.CreateAsync(
                ProjectId,
                _model.Title,
                _model.Description,
                _model.BranchName,
                string.IsNullOrEmpty(_model.ParentId) ? null : _model.ParentId);

            NavigationManager.NavigateTo($"projects/{ProjectId}");
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private class PullRequestModel
    {
        public string Title { get; set; } = "";
        public string? Description { get; set; }
        public string? BranchName { get; set; }
        public string? ParentId { get; set; }
    }
}
